{
  "name": "kqb",
  "description": "Type-safe query builder for Kintone",
  "version": "2.0.0",
  "author": "Teppei Sato <teppeis@gmail.com>",
  "engines": {
    "node": ">=12"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "!**/__tests__"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rimraf dist *.tsbuildinfo",
    "lint": "run-p -lc --aggregate-output lint:*",
    "lint:eslint": "eslint .",
    "lint:prettier": "prettier --check .",
    "fix": "run-s fix:prettier fix:eslint",
    "fix:eslint": "npm run lint:eslint -- --fix",
    "fix:prettier": "npm run lint:prettier -- --write",
    "prepack": "run-s clean build",
    "test": "run-p -l --aggregate-output lint:* typecheck unit",
    "typecheck": "tsc --noEmit",
    "unit": "jest --coverage"
  },
  "devDependencies": {
    "@types/node": "^12.20.4",
    "eslint": "^7.20.0",
    "eslint-config-teppeis": "^13.1.4",
    "jest": "^26.6.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.2"
  },
  "homepage": "https://github.com/teppeis/kqb",
  "repository": "teppeis/kqb",
  "keywords": [
    "kintone",
    "query",
    "typescript"
  ],
  "license": "MIT"
}
